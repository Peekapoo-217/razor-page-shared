@page
@model TH.RazorPages.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<h1 class="text-center mb-5">Product Details</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Product Information Section -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Product Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Product Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Name)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Description)</dd>

                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Price)</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Category.Name)</dd>
                    </dl>
                </div>
            </div>

            <!-- Images Section -->
            <div class="card shadow-lg mt-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Product Images</h4>
                </div>
                <div class="card-body">
                    @if (Model.Product.ImgProducts.Any())
                    {
                        <div class="row">
                            @foreach (var img in Model.Product.ImgProducts)
                            {
                                <div class="col-md-4 mb-3">
                                    <img src="@img.Path" alt="Product Image" class="img-fluid rounded border" />
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>No images available for this product.</p>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4 text-center">
                <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-lg">Edit Product</a>
                <a asp-page="./Index" class="btn btn-outline-secondary btn-lg ms-3">Back to List</a>
            </div>
        </div>
    </div>
</div>
