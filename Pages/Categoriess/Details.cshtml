@page
@model TH.RazorPages.Pages.Categoriess.DetailsModel
@{
    ViewData["Title"] = "Category Details";
}

<h1 class="text-center mb-4">Category Details</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Category Information</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="mb-3">Category Details</h5>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Category.Name)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Category.Name)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Category.Description)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Category.Description)
                            </dd>
                        </dl>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Edit" asp-route-id="@Model.Category.Id" class="btn btn-warning btn-lg">Edit</a>
                        <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
