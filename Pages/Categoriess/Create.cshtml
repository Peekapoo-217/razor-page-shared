@page
@model TH.RazorPages.Pages.Categoriess.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Create New Category</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Category Details</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Category.Name" class="form-label fw-semibold"></label>
                            <input asp-for="Category.Name" class="form-control form-control-lg" placeholder="Enter category name" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Category.Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Category.Description" class="form-control form-control-lg" rows="4" placeholder="Enter category description"></textarea>
                            <span asp-validation-for="Category.Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Category</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
