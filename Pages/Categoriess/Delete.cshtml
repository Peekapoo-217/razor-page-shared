@page
@model TH.RazorPages.Pages.Categoriess.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">Delete Category</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Are you sure you want to delete this category?</h5>

                    <div class="mb-4">
                        <h6>Category Details</h6>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Category.Name)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Category.Name)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Category.Description)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Category.Description)
                            </dd>
                        </dl>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Category.Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">Delete Category</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
