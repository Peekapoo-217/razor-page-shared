@page "/contact"
@using TH.RazorPages.Models
@model TH.RazorPages.Pages.ContactPageModel
@{
    ViewData["Title"] = "LIÊN HỆ";
}
<h1 class="display-4">Trang liên hệ</h1>
<p class="lead">Điền các thông tin liên hệ</p>
<hr />
<form class="bg-light p-2 m-2" method="post" asp-page="ContactPage">
    <div class="mb-3">
        <label class="form-lable" asp-for="@Model.contact.ContactId"></label>
        <input class="form-control" asp-for="@Model.contact.ContactId" />
        <span class="text-danger" asp-validation-for="@Model.contact.ContactId"></span>
    </div>
    <div class="mb-3">
        <label class="form-lable" asp-for="@Model.contact.FirstName"></label>
        <input class="form-control" asp-for="@Model.contact.FirstName" />
        <span class="text-danger" asp-validation-for="@Model.contact.FirstName"></span>
    </div>
    <div class="mb-3">
        <label class="form-lable" asp-for="@Model.contact.LastName"></label>
        <input class="form-control" asp-for="@Model.contact.LastName" />
        <span class="text-danger" asp-validation-for="@Model.contact.LastName"></span>
    </div>
    <div class="mb-3">
        <label class="form-lable" asp-for="@Model.contact.DateOfBirth"></label>
        <input class="form-control" asp-for="@Model.contact.DateOfBirth" />
        <span class="text-danger" asp-validation-for="@Model.contact.DateOfBirth"></span>
    </div>
    <div class="mb-3">
        <label class="form-lable" asp-for="@Model.contact.Email"></label>
        <input class="form-control" asp-for="@Model.contact.Email" />
        <span class="text-danger" asp-validation-for="@Model.contact.Email"></span>
    </div>
    <button class="btn btn-danger" type="submit">Gửi</button>
</form>
<p>@Model.thongbao</p>
<div class="alert alert-danger">
    <p>Thông tin Contact</p>
    <ul>
        <li>ContactId: @Model.contact.ContactId</li>
        <li>FirstName: @Model.contact.FirstName</li>
        <li>LastName: @Model.contact.LastName</li>
        <li>DateOfBirth: @Model.contact.DateOfBirth</li>
        <li>Email: @Model.contact.Email</li>
    </ul>
</div>